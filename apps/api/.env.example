# Node Environment
NODE_ENV=development
PORT=4000
HOSTNAME=0.0.0.0

# Database (Neon)
DATABASE_URL=postgresql://user:password@host:5432/planrrr?sslmode=require

# Redis (Upstash)
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
ENCRYPTION_SECRET=your-encryption-secret-32-chars

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Internal API Key (for Worker communication)
INTERNAL_API_KEY=your-internal-api-key-change-this

# Social Media APIs (optional for initial deployment)
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
TWITTER_API_KEY=
TWITTER_API_SECRET=
YOUTUBE_API_KEY=

# Storage (R2/S3) (optional for initial deployment)
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=

# Monitoring (optional but recommended)
SENTRY_DSN=
LOG_LEVEL=info

# API Version
API_VERSION=1.0.0