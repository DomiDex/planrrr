# Node Environment
NODE_ENV=development
PORT=4000
HOSTNAME=0.0.0.0

# Database (Neon)
DATABASE_URL=""

# Redis (Upstash)
UPSTASH_REDIS_REST_URL=https://your-redis-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this
ENCRYPTION_SECRET=your-encryption-secret-32-chars

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# CORS Configuration (optional)
ALLOWED_ORIGINS=
CSRF_ALLOWED_ORIGINS=

# Internal API Key (for Worker communication)
INTERNAL_API_KEY=your-internal-api-key-change-this

# Social Media APIs - OAuth disabled
# Using email/password authentication only

# Storage (Cloudflare R2)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=planrrr-media
R2_PUBLIC_URL=

# Monitoring (optional but recommended)
SENTRY_DSN=
LOG_LEVEL=info

# API Version
API_VERSION=1.0.0