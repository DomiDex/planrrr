# Database
DATABASE_URL="postgresql://user:password@host:5432/planrrr?sslmode=require"

# Redis Configuration (Choose one provider)
# Option 1: Upstash (Serverless)
REDIS_PROVIDER="upstash"
REDIS_HOST="global-redis.upstash.io"
REDIS_PORT="6379"
REDIS_PASSWORD="your-upstash-password"

# Option 2: Railway (Dedicated)
# REDIS_PROVIDER="railway"
# REDIS_URL="redis://default:password@redis.railway.internal:6379"

# Option 3: Local Development
# REDIS_PROVIDER="local"
# REDIS_HOST="localhost"
# REDIS_PORT="6379"
# REDIS_PASSWORD=""

# Worker Configuration
WORKER_CONCURRENCY="5"
WORKER_MAX_JOBS_PER_SECOND="10"
WORKER_RETRY_ATTEMPTS="3"
WORKER_RETRY_DELAY="2000"

# Social Media APIs
META_APP_ID=""
META_APP_SECRET=""
META_GRAPH_API_VERSION="v18.0"

X_API_KEY=""
X_API_SECRET=""
X_BEARER_TOKEN=""
X_API_VERSION="2"

YOUTUBE_API_KEY=""
YOUTUBE_API_VERSION="v3"

# Monitoring (Optional)
SENTRY_DSN=""
LOG_LEVEL="info"