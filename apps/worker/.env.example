# Node Environment
NODE_ENV=development

# Database (same as API)
DATABASE_URL=postgresql://user:password@host:5432/planrrr?sslmode=require

# Redis (for BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# For Railway deployment with internal networking
# REDIS_HOST=redis.railway.internal

# Health Check (optional)
ENABLE_HEALTH_CHECK=false
HEALTH_PORT=3001

# Internal API Key (for communicating with API service)
INTERNAL_API_KEY=your-internal-api-key-change-this
API_BASE_URL=http://localhost:4000

# Monitoring (optional)
SENTRY_DSN=
LOG_LEVEL=info