{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NODE_ENV",
    "DATABASE_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "db:generate"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "DATABASE_URL",
        "NEXT_PUBLIC_API_URL",
        "FRONTEND_URL",
        "ALLOWED_ORIGINS",
        "CSRF_ALLOWED_ORIGINS",
        "JWT_SECRET",
        "JWT_REFRESH_SECRET",
        "JWT_EXPIRES_IN",
        "ENCRYPTION_SECRET",
        "INTERNAL_API_KEY",
        "HOSTNAME",
        "PORT",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN",
        "REDIS_HOST",
        "REDIS_PORT",
        "REDIS_PASSWORD",
        "LOG_LEVEL",
        "SENTRY_DSN",
        "API_VERSION",
        "ENABLE_HEALTH_CHECK",
        "HEALTH_PORT"
      ]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "env": [
        "DATABASE_URL",
        "REDIS_HOST",
        "REDIS_PORT",
        "REDIS_PASSWORD",
        "PORT",
        "HOSTNAME",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN",
        "JWT_SECRET",
        "JWT_REFRESH_SECRET",
        "JWT_EXPIRES_IN",
        "ENCRYPTION_SECRET",
        "INTERNAL_API_KEY",
        "FRONTEND_URL",
        "ALLOWED_ORIGINS",
        "CSRF_ALLOWED_ORIGINS",
        "LOG_LEVEL",
        "SENTRY_DSN",
        "API_VERSION",
        "ENABLE_HEALTH_CHECK",
        "HEALTH_PORT"
      ]
    },
    "dev:api": {
      "cache": false,
      "persistent": true,
      "env": [
        "PORT",
        "HOSTNAME",
        "DATABASE_URL",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN",
        "JWT_SECRET",
        "JWT_REFRESH_SECRET",
        "JWT_EXPIRES_IN",
        "ENCRYPTION_SECRET",
        "INTERNAL_API_KEY",
        "FRONTEND_URL",
        "ALLOWED_ORIGINS",
        "CSRF_ALLOWED_ORIGINS",
        "LOG_LEVEL",
        "SENTRY_DSN",
        "API_VERSION"
      ]
    },
    "dev:web": {
      "cache": false,
      "persistent": true,
      "env": [
        "DATABASE_URL",
        "BETTER_AUTH_SECRET",
        "BETTER_AUTH_URL",
        "NEXT_PUBLIC_API_URL"
      ]
    },
    "dev:worker": {
      "cache": false,
      "persistent": true,
      "env": [
        "DATABASE_URL",
        "REDIS_HOST",
        "REDIS_PORT",
        "REDIS_PASSWORD",
        "INTERNAL_API_KEY",
        "API_BASE_URL",
        "ENABLE_HEALTH_CHECK",
        "HEALTH_PORT",
        "LOG_LEVEL",
        "SENTRY_DSN"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": [],
      "env": [
        "PORT",
        "HOSTNAME",
        "DATABASE_URL",
        "UPSTASH_REDIS_REST_URL",
        "UPSTASH_REDIS_REST_TOKEN",
        "JWT_SECRET",
        "JWT_REFRESH_SECRET",
        "JWT_EXPIRES_IN",
        "ENCRYPTION_SECRET",
        "INTERNAL_API_KEY",
        "FRONTEND_URL",
        "ALLOWED_ORIGINS",
        "CSRF_ALLOWED_ORIGINS",
        "LOG_LEVEL",
        "SENTRY_DSN",
        "API_VERSION",
        "REDIS_HOST",
        "REDIS_PORT",
        "REDIS_PASSWORD",
        "API_BASE_URL",
        "ENABLE_HEALTH_CHECK",
        "HEALTH_PORT"
      ]
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "test/**/*.ts"]
    },
    "db:generate": {
      "cache": false,
      "inputs": ["prisma/schema.prisma"]
    },
    "db:push": {
      "cache": false,
      "inputs": ["prisma/schema.prisma"]
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    }
  }
}