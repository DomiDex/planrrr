# Docker Development Environment Variables Example
# Copy this file to .env.docker and update with your values

# ============================================
# DATABASE CONFIGURATION
# ============================================
POSTGRES_USER=planrrr
POSTGRES_PASSWORD=changeme_in_production
POSTGRES_DB=planrrr_dev
POSTGRES_PORT=5432

# Connection string for Prisma
DATABASE_URL=postgresql://planrrr:changeme_in_production@localhost:5432/planrrr_dev?sslmode=disable

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=changeme_in_production
REDIS_URL=redis://:changeme_in_production@localhost:6379

# ============================================
# EMAIL CONFIGURATION (Mailhog for Development)
# ============================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_FROM=noreply@planrrr.local
SMTP_SECURE=false
MAILHOG_UI_PORT=8025

# ============================================
# STORAGE CONFIGURATION (MinIO)
# ============================================
# MinIO admin credentials
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=changeme_in_production

# Application credentials for MinIO
MINIO_ACCESS_KEY=planrrr_access
MINIO_SECRET_KEY=changeme_in_production

# MinIO ports
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# S3-compatible settings for application
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY_ID=planrrr_access
S3_SECRET_ACCESS_KEY=changeme_in_production
S3_BUCKET_NAME=planrrr-local
S3_REGION=us-east-1
S3_FORCE_PATH_STYLE=true

# ============================================
# APPLICATION URLS
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
API_URL=http://localhost:3001
WORKER_URL=http://localhost:3002

# ============================================
# AUTHENTICATION (Better Auth)
# ============================================
BETTER_AUTH_SECRET=changeme_use_openssl_rand_base64_32
BETTER_AUTH_URL=http://localhost:3000

# ============================================
# OAUTH PROVIDERS (Optional for Development)
# ============================================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ============================================
# SOCIAL MEDIA APIS (Optional for Development)
# ============================================
# Meta (Facebook/Instagram)
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret

# X (Twitter)
X_API_KEY=your_x_api_key
X_API_SECRET=your_x_api_secret
X_BEARER_TOKEN=your_x_bearer_token

# YouTube
YOUTUBE_API_KEY=your_youtube_api_key

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
NODE_ENV=development
LOG_LEVEL=debug

# ============================================
# MONITORING (Optional)
# ============================================
SENTRY_DSN=
POSTHOG_API_KEY=
POSTHOG_HOST=